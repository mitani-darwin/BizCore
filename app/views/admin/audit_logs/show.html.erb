<% content_for :page_title do %>
  監査ログ詳細
<% end %>

<div class="space-y-4">
  <div>
    <h1 class="text-xl font-semibold text-slate-900">監査ログ詳細</h1>
    <p class="text-sm text-slate-600">記録された操作の詳細です。</p>
  </div>

  <div class="rounded-xl border border-slate-200 bg-white p-5 shadow-sm space-y-3 text-sm text-slate-800">
    <div class="flex justify-between">
      <div>
        <div class="text-xs text-slate-500">日時</div>
        <div class="font-semibold"><%= l @audit_log.created_at, format: :long %></div>
      </div>
      <div class="text-right">
        <div class="text-xs text-slate-500">ユーザー</div>
        <div class="font-semibold"><%= @audit_log.user&.name || "System" %></div>
      </div>
    </div>

    <div>
      <div class="text-xs text-slate-500">操作</div>
      <div class="font-semibold"><%= @audit_log.summary %></div>
    </div>

    <div>
      <div class="text-xs text-slate-500">対象リソース</div>
      <div class="font-semibold"><%= "#{@audit_log.auditable_type}##{@audit_log.auditable_id}" %></div>
    </div>

    <div class="grid grid-cols-1 gap-3 sm:grid-cols-2">
      <div>
        <div class="text-xs text-slate-500">IPアドレス</div>
        <div class="font-semibold text-slate-700"><%= @audit_log.ip_address %></div>
      </div>
      <div>
        <div class="text-xs text-slate-500">User Agent</div>
        <div class="text-xs text-slate-700 break-all"><%= @audit_log.user_agent %></div>
      </div>
    </div>

    <% if @audit_log.changes.present? %>
      <div>
        <div class="text-xs text-slate-500">変更内容</div>
        <pre class="mt-1 overflow-auto rounded-lg bg-slate-50 p-3 text-xs text-slate-800 border border-slate-200"><%= JSON.pretty_generate(@audit_log.changes) %></pre>
      </div>
    <% end %>
  </div>

  <%= link_to "一覧に戻る", admin_audit_logs_path, class: "inline-flex items-center rounded border border-slate-200 bg-white px-3 py-2 text-sm text-slate-700 hover:bg-slate-50" %>
</div>
