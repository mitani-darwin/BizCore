<header class="sticky top-0 z-30 h-14 border-b border-slate-200 bg-white">
  <div class="mx-auto flex h-full max-w-full items-center justify-between px-4">

    <!-- ページタイトル（content_for :page_title） -->
    <h1 class="text-sm font-semibold text-slate-700">
      <%= content_for?(:page_title) ? yield(:page_title) : "" %>
    </h1>

    <div class="flex items-center gap-3">
      <div class="text-right text-[11px] leading-tight text-slate-600">
        <div class="font-semibold text-slate-800"><%= current_user&.name %></div>
        <div><%= current_user&.email %></div>
      </div>

      <div class="text-[11px] text-slate-500">
        <%= current_tenant&.name.presence || "Tenant not set" %>
      </div>

      <%= button_to "ログアウト",
          destroy_user_session_path,
          method: :delete,
          form: { data: { turbo: true } },
          class: "rounded-full border border-slate-200 px-3 py-1 text-xs font-semibold text-slate-700 hover:bg-slate-50" %>
    </div>
</header>
