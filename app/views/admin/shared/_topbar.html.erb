<header class="sticky top-0 z-30 h-14 border-b border-slate-200 bg-white">
  <div class="mx-auto flex h-full max-w-full items-center justify-between px-4">
    
    <!-- ページタイトル（content_for :page_title） -->
    <h1 class="text-sm font-semibold text-slate-700">
      <%= content_for?(:page_title) ? yield(:page_title) : "" %>
    </h1>

    <div class="flex items-center gap-3">

      <!-- 管理者メールアドレス -->
      <span class="text-xs text-slate-500">
        <%= current_admin_user&.email || "info@darin-chiba.jp" %>
      </span>

      <!-- ログアウト -->
<%#
      <%= link_to "ログアウト",
                  destroy_admin_session_path,
                  method: :delete,
                  class: "rounded-full border border-slate-200 px-3 py-1 text-xs hover:bg-slate-50" %>


    </div>
</header>