<aside class="hidden md:flex w-64 flex-col border-r border-slate-200 bg-white">
  <div class="h-14 flex items-center px-4 border-b border-slate-200">
    <div class="flex items-center gap-2">
      <div class="inline-flex h-9 w-9 items-center justify-center rounded-xl bg-brand-500 text-white text-lg font-bold">
        D
      </div>
      <span class="text-sm font-semibold text-slate-800">darwin 管理</span>
    </div>
  </div>

  <nav class="flex-1 py-4">
    <% navigation_sections.each do |section| %>
      <div class="mb-4 px-3">
        <p class="mb-2 text-[11px] font-semibold uppercase tracking-wide text-slate-500"><%= section.label %></p>
        <ul class="space-y-1">
          <% section.items.each do |item| %>
            <% active = navigation_active?(item) %>
            <% path = navigation_path(item) %>
            <li>
              <%= link_to item.label,
                  path || "#",
                  class: [
                    "block rounded-lg px-3 py-2 text-sm",
                    active ? "bg-slate-100 font-semibold text-slate-900" : "text-slate-700 hover:bg-slate-100"
                  ].join(" ") %>
              <% if item.children.any? %>
                <ul class="mt-1 space-y-1 pl-3">
                  <% item.children.each do |child| %>
                    <% child_active = navigation_active?(child) %>
                    <% child_path = navigation_path(child) %>
                    <li>
                      <%= link_to child.label,
                          child_path || "#",
                          class: [
                            "block rounded-md px-3 py-1.5 text-xs",
                            child_active ? "bg-slate-100 font-semibold text-slate-900" : "text-slate-600 hover:bg-slate-100"
                          ].join(" ") %>
                    </li>
                  <% end %>
                </ul>
              <% end %>
            </li>
          <% end %>
        </ul>
      </div>
    <% end %>
  </nav>
</aside>
