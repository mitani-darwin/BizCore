<%= form_with model: [:admin, role], local: true, class: "space-y-6" do |f| %>
  <% if role.errors.any? %>
    <div class="rounded-lg border border-rose-200 bg-rose-50 px-4 py-3 text-sm text-rose-700">
      <p class="font-semibold">入力内容にエラーがあります。</p>
      <ul class="list-disc pl-5">
        <% role.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="grid grid-cols-1 gap-4 sm:grid-cols-2">
    <div>
      <%= f.label :name, "ロール名", class: "block text-sm font-medium text-slate-800" %>
      <%= f.text_field :name, class: "mt-1 w-full rounded-lg border border-slate-200 px-3 py-2 text-sm focus:border-sky-500 focus:outline-none focus:ring-1 focus:ring-sky-500", required: true %>
    </div>

    <div>
      <%= f.label :key, "キー", class: "block text-sm font-medium text-slate-800" %>
      <%= f.text_field :key, class: "mt-1 w-full rounded-lg border border-slate-200 px-3 py-2 text-sm focus:border-sky-500 focus:outline-none focus:ring-1 focus:ring-sky-500", required: true %>
      <p class="mt-1 text-xs text-slate-500">例: admin, manager, viewer</p>
    </div>
  </div>

  <div>
    <%= f.label :description, "説明", class: "block text-sm font-medium text-slate-800" %>
    <%= f.text_area :description, rows: 2, class: "mt-1 w-full rounded-lg border border-slate-200 px-3 py-2 text-sm focus:border-sky-500 focus:outline-none focus:ring-1 focus:ring-sky-500" %>
  </div>

  <div>
    <div class="flex items-center justify-between">
      <h3 class="text-sm font-semibold text-slate-900">付与する権限</h3>
      <p class="text-xs text-slate-500">admin.&lt;resource&gt;.&lt;action&gt;</p>
    </div>

    <%= hidden_field_tag "role[permission_ids][]", "" %>
    <div class="mt-3 space-y-3">
      <% @permissions.group_by(&:resource).each do |resource, perms| %>
        <div class="rounded-lg border border-slate-200 bg-slate-50 p-3">
          <div class="text-xs font-semibold text-slate-700"><%= resource %></div>
          <div class="mt-2 grid grid-cols-1 gap-2 sm:grid-cols-2">
            <% perms.each do |permission| %>
              <label class="flex items-start gap-2 rounded border border-slate-200 bg-white px-3 py-2 text-sm text-slate-800 shadow-sm">
                <%= check_box_tag "role[permission_ids][]", permission.id, role.permissions.exists?(permission.id), class: "mt-1 h-4 w-4 rounded border-slate-300 text-sky-600 focus:ring-sky-500" %>
                <div>
                  <div class="font-semibold"><%= permission.key %></div>
                  <div class="text-xs text-slate-500"><%= permission.description.presence || "#{permission.resource} #{permission.action}" %></div>
                </div>
              </label>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <div class="flex items-center gap-3">
    <%= f.submit "保存する", class: "rounded-lg bg-sky-600 px-4 py-2 text-sm font-semibold text-white hover:bg-sky-700" %>
    <%= link_to "キャンセル", admin_roles_path, class: "text-sm text-slate-600 hover:text-slate-800" %>
  </div>
<% end %>
