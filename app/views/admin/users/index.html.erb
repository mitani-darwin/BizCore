<% content_for :page_title do %>
  ユーザ一覧
<% end %>

<div class="space-y-4">
  <div class="flex items-center justify-between gap-3">
    <div>
      <h1 class="text-xl font-semibold text-slate-900">ユーザ一覧</h1>
      <p class="text-sm text-slate-600">現在のテナントに所属するユーザのみ表示します。</p>
    </div>
    <% if can?("admin.users.create") %>
      <%= link_to "新規ユーザ", new_admin_user_path, class: "rounded-lg bg-sky-600 px-4 py-2 text-sm font-semibold text-white hover:bg-sky-700" %>
    <% end %>
  </div>

  <% if @users.any? %>
    <div class="rounded-xl border border-slate-200 bg-white shadow-sm">
      <table class="min-w-full text-left text-sm">
        <thead class="bg-slate-50 text-xs uppercase tracking-wide text-slate-500">
          <tr>
            <th class="px-4 py-2">氏名</th>
            <th class="px-4 py-2">メール</th>
            <th class="px-4 py-2">ロール</th>
            <th class="px-4 py-2 text-right">操作</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-slate-100">
          <% @users.each do |user| %>
            <tr class="hover:bg-slate-50">
              <td class="px-4 py-2 text-slate-900 font-semibold"><%= user.name %></td>
              <td class="px-4 py-2 text-slate-700"><%= user.email %></td>
              <td class="px-4 py-2 text-slate-700">
                <% if user.roles.any? %>
                  <div class="flex flex-wrap gap-1">
                    <% user.roles.each do |role| %>
                      <span class="rounded-full bg-slate-50 px-2 py-0.5 text-xs text-slate-700 border border-slate-200"><%= role.name %></span>
                    <% end %>
                  </div>
                <% else %>
                  <span class="text-xs text-slate-500">未割り当て</span>
                <% end %>
              </td>
              <td class="px-4 py-2 text-right">
                <div class="inline-flex gap-2">
                  <% if can?("admin.users.show") %>
                    <%= link_to "詳細", admin_user_path(user), class: "rounded border border-slate-200 bg-white px-3 py-1.5 text-xs text-slate-700 hover:bg-slate-50" %>
                  <% end %>
                  <% if can?("admin.users.update") %>
                    <%= link_to "編集", edit_admin_user_path(user), class: "rounded border border-sky-200 bg-sky-50 px-3 py-1.5 text-xs font-semibold text-sky-700 hover:bg-sky-100" %>
                  <% end %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <div class="rounded-lg border border-dashed border-slate-300 bg-slate-50 p-6 text-center text-slate-600">
      ユーザがまだいません。
    </div>
  <% end %>
</div>
