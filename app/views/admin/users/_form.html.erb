<%= form_with model: [:admin, user], local: true, class: "space-y-6" do |f| %>
  <% if user.errors.any? %>
    <div class="rounded-lg border border-rose-200 bg-rose-50 px-4 py-3 text-sm text-rose-700">
      <p class="font-semibold">入力内容にエラーがあります。</p>
      <ul class="list-disc pl-5">
        <% user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="grid grid-cols-1 gap-4 sm:grid-cols-2">
    <div>
      <%= f.label :name, "氏名", class: "block text-sm font-medium text-slate-800" %>
      <%= f.text_field :name, class: "mt-1 w-full rounded-lg border border-slate-200 px-3 py-2 text-sm focus:border-sky-500 focus:outline-none focus:ring-1 focus:ring-sky-500", required: true %>
    </div>

    <div>
      <%= f.label :email, "メールアドレス", class: "block text-sm font-medium text-slate-800" %>
      <%= f.email_field :email, class: "mt-1 w-full rounded-lg border border-slate-200 px-3 py-2 text-sm focus:border-sky-500 focus:outline-none focus:ring-1 focus:ring-sky-500", required: true %>
    </div>

    <div>
      <%= f.label :password, "パスワード", class: "block text-sm font-medium text-slate-800" %>
      <%= f.password_field :password, class: "mt-1 w-full rounded-lg border border-slate-200 px-3 py-2 text-sm focus:border-sky-500 focus:outline-none focus:ring-1 focus:ring-sky-500", autocomplete: "new-password", placeholder: user.persisted? ? "変更する場合のみ入力" : "" %>
    </div>

    <div>
      <%= f.label :password_confirmation, "パスワード確認", class: "block text-sm font-medium text-slate-800" %>
      <%= f.password_field :password_confirmation, class: "mt-1 w-full rounded-lg border border-slate-200 px-3 py-2 text-sm focus:border-sky-500 focus:outline-none focus:ring-1 focus:ring-sky-500", autocomplete: "new-password" %>
    </div>

    <div>
      <%= f.label :locale, "言語", class: "block text-sm font-medium text-slate-800" %>
      <%= f.text_field :locale, class: "mt-1 w-full rounded-lg border border-slate-200 px-3 py-2 text-sm focus:border-sky-500 focus:outline-none focus:ring-1 focus:ring-sky-500" %>
    </div>

    <div>
      <%= f.label :time_zone, "タイムゾーン", class: "block text-sm font-medium text-slate-800" %>
      <%= f.text_field :time_zone, class: "mt-1 w-full rounded-lg border border-slate-200 px-3 py-2 text-sm focus:border-sky-500 focus:outline-none focus:ring-1 focus:ring-sky-500" %>
    </div>
  </div>

  <div>
    <div class="flex items-center justify-between">
      <h3 class="text-sm font-semibold text-slate-900">ロール割り当て</h3>
      <p class="text-xs text-slate-500">現在のテナントのロールのみ選択可能</p>
    </div>
    <%= hidden_field_tag "user[role_ids][]", "" %>
    <% if @role_options.any? %>
      <div class="mt-3 grid grid-cols-1 gap-2 sm:grid-cols-2">
        <% @role_options.each do |role| %>
          <label class="flex items-start gap-2 rounded border border-slate-200 bg-white px-3 py-2 text-sm text-slate-800 shadow-sm">
            <%= check_box_tag "user[role_ids][]", role.id, user.role_ids.include?(role.id), class: "mt-1 h-4 w-4 rounded border-slate-300 text-sky-600 focus:ring-sky-500" %>
            <div>
              <div class="font-semibold"><%= role.name %></div>
              <div class="text-xs text-slate-500">キー: <%= role.key %></div>
            </div>
          </label>
        <% end %>
      </div>
    <% else %>
      <p class="mt-2 text-xs text-slate-500">利用できるロールがありません。</p>
    <% end %>
  </div>

  <div class="flex items-center gap-3">
    <%= f.submit "保存する", class: "rounded-lg bg-sky-600 px-4 py-2 text-sm font-semibold text-white hover:bg-sky-700" %>
    <%= link_to "キャンセル", admin_users_path, class: "text-sm text-slate-600 hover:text-slate-800" %>
  </div>
<% end %>
