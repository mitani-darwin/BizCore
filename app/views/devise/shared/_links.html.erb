<div class="mt-6 space-y-1 text-[11px] text-slate-500">
  <% if controller_name != 'sessions' %>
    <div>
      <%= link_to "ログイン画面へ戻る", new_session_path(resource_name), class: "font-semibold text-brand-600 hover:text-brand-500" %>
    </div>
  <% end %>

  <% if devise_mapping.recoverable? && controller_name != 'passwords' %>
    <div>
      <%= link_to "パスワードを忘れた場合", new_password_path(resource_name), class: "font-semibold text-brand-600 hover:text-brand-500" %>
    </div>
  <% end %>

  <% if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <div>
      <%= link_to "確認メールを再送", new_confirmation_path(resource_name), class: "font-semibold text-brand-600 hover:text-brand-500" %>
    </div>
  <% end %>

  <% if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
    <div>
      <%= link_to "ロック解除メールを再送", new_unlock_path(resource_name), class: "font-semibold text-brand-600 hover:text-brand-500" %>
    </div>
  <% end %>
</div>
