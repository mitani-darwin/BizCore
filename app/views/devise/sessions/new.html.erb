<% content_for :title, "ログイン" %>
<% content_for :head do %>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Manrope:wght@500;600;700&display=swap" rel="stylesheet">

  <script src="https://cdn.tailwindcss.com"></script>
  <script>
    tailwind.config = {
      theme: {
        fontFamily: {
          sans: ['"Manrope"', "ui-sans-serif", "system-ui"],
        },
        extend: {
          colors: {
            brand: {
              50: "#e6f9fb",
              100: "#caf5f7",
              400: "#00c8da",
              500: "#00bcd4",
              600: "#0097a7",
              900: "#044252",
            },
          },
        },
      },
    };
  </script>
<% end %>

<div class="relative min-h-screen overflow-hidden bg-slate-950 text-slate-50">
  <div class="pointer-events-none absolute inset-0">
    <div class="absolute -left-24 -top-24 h-72 w-72 rounded-full bg-brand-600/40 blur-3xl"></div>
    <div class="absolute bottom-[-8rem] right-[-6rem] h-96 w-96 rounded-full bg-emerald-500/30 blur-3xl"></div>
    <div class="absolute inset-0 bg-[radial-gradient(circle_at_20%_20%,rgba(255,255,255,0.08),transparent_40%),radial-gradient(circle_at_80%_0,rgba(0,188,212,0.12),transparent_35%)]"></div>
  </div>

  <div class="relative flex min-h-screen items-center justify-center px-4">
    <div class="w-full max-w-5xl grid gap-6 md:grid-cols-[1.1fr_0.9fr] items-center">
      <div class="rounded-3xl border border-white/10 bg-white/5 p-8 backdrop-blur-md shadow-2xl shadow-brand-900/30">
        <div class="mb-6 inline-flex items-center gap-3 rounded-full border border-white/10 bg-white/10 px-3 py-1 text-[11px] font-semibold uppercase tracking-[0.08em] text-brand-50">
          <span class="h-2 w-2 rounded-full bg-emerald-400 shadow-[0_0_0_4px_rgba(52,211,153,0.25)]"></span>
          Secure Admin Access
        </div>
        <h1 class="text-3xl font-semibold text-white leading-tight">BizCore 管理コンソール</h1>
        <p class="mt-3 text-sm text-slate-200/80 leading-relaxed">
          ログインしてテナントの設定、ユーザー、ロール、権限を管理できます。認証済みのユーザーのみが管理画面へ進めます。
        </p>
        <div class="mt-8 grid grid-cols-2 gap-3 text-[11px] text-slate-200/80">
          <div class="rounded-xl border border-white/10 bg-white/5 p-3">
            <p class="text-xs font-semibold text-white">テナント固有</p>
            <p class="mt-1 leading-relaxed">current_tenant に紐づくデータのみ表示します。</p>
          </div>
          <div class="rounded-xl border border-white/10 bg-white/5 p-3">
            <p class="text-xs font-semibold text-white">Pundit 認可</p>
            <p class="mt-1 leading-relaxed">権限がない場合は 403 でブロックされます。</p>
          </div>
        </div>
      </div>

      <div class="rounded-3xl border border-white/10 bg-white/90 p-8 text-slate-900 shadow-2xl backdrop-blur md:ml-auto md:w-full md:max-w-[420px]">
        <div class="mb-6">
          <p class="text-sm font-semibold text-brand-600">Welcome back</p>
          <h2 class="text-2xl font-semibold text-slate-900 mt-1">管理コンソールにログイン</h2>
        </div>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-4" }) do |f| %>
          <div>
            <label class="mb-1 block text-xs font-semibold text-slate-700">メールアドレス</label>
            <%= f.email_field :email,
                  autofocus: true,
                  autocomplete: "email",
                  class: "w-full rounded-xl border border-slate-200 bg-white px-3 py-2.5 text-sm text-slate-900 shadow-inner shadow-slate-100 outline-none transition focus:border-brand-500 focus:ring-2 focus:ring-brand-100" %>
          </div>

          <div>
            <div class="flex items-center justify-between mb-1">
              <label class="text-xs font-semibold text-slate-700">パスワード</label>
              <% if devise_mapping.recoverable? %>
                <%= link_to "パスワードを忘れた場合", new_password_path(resource_name), class: "text-[11px] font-semibold text-brand-600 hover:text-brand-500" %>
              <% end %>
            </div>
            <%= f.password_field :password,
                  autocomplete: "current-password",
                  class: "w-full rounded-xl border border-slate-200 bg-white px-3 py-2.5 text-sm text-slate-900 shadow-inner shadow-slate-100 outline-none transition focus:border-brand-500 focus:ring-2 focus:ring-brand-100" %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="flex items-center gap-2">
              <%= f.check_box :remember_me, class: "h-4 w-4 rounded border-slate-300 text-brand-600 focus:ring-brand-500" %>
              <label class="text-xs text-slate-700">ログイン状態を保持する</label>
            </div>
          <% end %>

          <% if flash.alert.present? || flash[:alert].present? %>
            <div class="rounded-xl border border-rose-200 bg-rose-50 px-3 py-2 text-sm text-rose-700">
              <%= flash.alert || flash[:alert] %>
            </div>
          <% end %>

          <div class="pt-2">
            <%= f.submit "ログイン", class: "w-full inline-flex items-center justify-center rounded-xl bg-brand-600 px-4 py-2.5 text-sm font-semibold text-white shadow-lg shadow-brand-900/20 transition hover:bg-brand-500 focus:outline-none focus:ring-2 focus:ring-brand-200" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
