<% content_for :title, "パスワード再設定" %>
<% content_for :head do %>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Manrope:wght@500;600;700&display=swap" rel="stylesheet">
  <script src="https://cdn.tailwindcss.com"></script>
  <script>
    tailwind.config = {
      theme: {
        fontFamily: { sans: ['"Manrope"', "ui-sans-serif", "system-ui"] },
        extend: { colors: { brand: { 50: "#e6f9fb", 100: "#caf5f7", 500: "#00bcd4", 600: "#0097a7", 900: "#044252" } } },
      },
    };
  </script>
<% end %>

<div class="relative min-h-screen overflow-hidden bg-slate-950 text-slate-50">
  <div class="pointer-events-none absolute inset-0">
    <div class="absolute -left-24 -top-24 h-72 w-72 rounded-full bg-brand-600/40 blur-3xl"></div>
    <div class="absolute bottom-[-8rem] right-[-6rem] h-96 w-96 rounded-full bg-emerald-500/30 blur-3xl"></div>
    <div class="absolute inset-0 bg-[radial-gradient(circle_at_20%_20%,rgba(255,255,255,0.08),transparent_40%),radial-gradient(circle_at_80%_0,rgba(0,188,212,0.12),transparent_35%)]"></div>
  </div>

  <div class="relative flex min-h-screen items-center justify-center px-4">
    <div class="w-full max-w-4xl grid gap-6 md:grid-cols-[1.1fr_0.9fr] items-center">
      <div class="rounded-3xl border border-white/10 bg-white/5 p-8 backdrop-blur-md shadow-2xl shadow-brand-900/30">
        <div class="mb-6 inline-flex items-center gap-3 rounded-full border border-white/10 bg-white/10 px-3 py-1 text-[11px] font-semibold uppercase tracking-[0.08em] text-brand-50">
          <span class="h-2 w-2 rounded-full bg-amber-300 shadow-[0_0_0_4px_rgba(252,211,77,0.25)]"></span>
          Password Reset
        </div>
        <h1 class="text-3xl font-semibold text-white leading-tight">パスワード再設定</h1>
        <p class="mt-3 text-sm text-slate-200/80 leading-relaxed">
          登録メールアドレス宛に再設定リンクを送信します。メール内のリンクから新しいパスワードを設定してください。
        </p>
      </div>

      <div class="rounded-3xl border border-white/10 bg-white/90 p-8 text-slate-900 shadow-2xl backdrop-blur md:ml-auto md:w-full md:max-w-[420px]">
        <div class="mb-6">
          <p class="text-sm font-semibold text-brand-600">Reset password</p>
          <h2 class="text-2xl font-semibold text-slate-900 mt-1">再設定メールを送信</h2>
        </div>

        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "space-y-4" }) do |f| %>
          <div>
            <label class="mb-1 block text-xs font-semibold text-slate-700">メールアドレス</label>
            <%= f.email_field :email,
                  autofocus: true,
                  autocomplete: "email",
                  class: "w-full rounded-xl border border-slate-200 bg-white px-3 py-2.5 text-sm text-slate-900 shadow-inner shadow-slate-100 outline-none transition focus:border-brand-500 focus:ring-2 focus:ring-brand-100" %>
          </div>

          <div class="pt-2">
            <%= f.submit "送信する", class: "w-full inline-flex items-center justify-center rounded-xl bg-brand-600 px-4 py-2.5 text-sm font-semibold uppercase tracking-wide text-white shadow-lg shadow-brand-900/20 transition hover:bg-brand-500 focus:outline-none focus:ring-2 focus:ring-brand-200" %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
